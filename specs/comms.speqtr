behavior 'Comms subsystem status command and response'
  when 'A command is received'
    get_status @ comms_subsystem as cmd
  end
  
  until 'The next command is received'
    get_status @ comms_subsystem
  end

  nominal case 'Comms subsystem responds with status'
    cmd -> comms_status @ comms_subsystem
  end
end
